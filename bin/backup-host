#!/bin/sh
# Backup the host files
. /etc/default/kvm-manager
backup=$BACKUP_DIR/host-`date +%F`.tar.lzma
#Don't use lzma -9, it would consume too much RAM and free the host
tar --exclude-from /etc/kvm-manager/host-excludes -cf - / | lzma > $backup
chown -R backups.backups $backup
sudo -H -u backups $KVM_MANAGER_ROOT/bin/encrypt-and-send $backup
